<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YogaCustomerApp.Pages.BookingHistoryPage"
             Title="Booking History">
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="15">
        <!-- Search Section -->
        <StackLayout Grid.Row="0" Spacing="10">
            <Label Text="View Your Bookings" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
            
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                <Entry x:Name="entryEmail" Placeholder="Enter your email address" Grid.Column="0" Keyboard="Email"/>
                <Button Text="Load Bookings" Clicked="OnSearchClicked" Grid.Column="1" BackgroundColor="#2196F3" TextColor="White"/>
            </Grid>
        </StackLayout>

        <!-- Bookings List -->
        <CollectionView Grid.Row="1" x:Name="bookingView" Margin="0,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="#E0E0E0" Margin="5" Padding="15" CornerRadius="8">
                        <StackLayout Spacing="5">
                            <Label Text="Booking Details" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding Email}" FontSize="14" TextColor="#666"/>
                            <Label Text="{Binding Timestamp}" FontSize="12" TextColor="#999"/>
                            <Label Text="{Binding InstanceIdsDisplay, StringFormat='Booked Classes: {0}'}" FontSize="12" TextColor="#666"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Status -->
        <Label Grid.Row="2" x:Name="statusLabel" Text="Enter your email to view bookings" 
               HorizontalOptions="Center" Padding="10" TextColor="#666"/>
    </Grid>
</ContentPage>
